<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="text_style">
        <item name="android:textSize">28sp</item>
        <item name="android:padding">10dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/inriasans_regular</item>
        <item name="android:color">@color/black</item>
    </style>

    <style name="btn_style">
        <item name="android:textSize">28sp</item>
        <item name="android:padding">10dp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">@font/inriasans_regular</item>
        <item name="android:color">@color/white</item>
        <item name="android:backgroundTint">@color/black</item>
        <item name="android:layout_margin">20dp</item>
    </style>

    <style name="bold_style">
        <item name="android:textSize">48sp</item>
        <item name="android:padding">10dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/inriasans_bold</item>
        <item name="android:color">@color/black</item>
    </style>

    <style name="edit_text_style">
        <item name="android:padding">16dp</item>
        <item name="android:inputType">none</item>
        <item name="android:maxLines">1</item>
        <item name="android:textAppearance">@font/inriasans_bold</item>
    </style>

    <style name="pinView_style">
     <item name="android:gravity">center</item>
     <item name="android:layout_marginTop">60dp</item>
     <item name="android:layout_width">wrap_content</item>
     <item name="android:layout_height">wrap_content</item>
     <item name="android:itemBackground">@color/white</item>
     <item name="android:layout_gravity">center</item>
     <item name="android:inputType">number</item>
     <item name="android:cursorVisible">true</item>
        <item name="android:focusable">true</item>
 </style>

    <style name="smallText_style">
        <item name="android:textSize">20sp</item>
        <item name="android:padding">10dp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">@font/inriasans_regular</item>
        <item name="android:color">@color/black</item>
        <item name="android:layout_margin">10dp</item>
    </style>

</resources>